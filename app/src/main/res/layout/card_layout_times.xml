            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/item_texte_jogador_2_4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_image_jogador_2_4"
            android:layout_below="@+id/item_image_jogador_2_4"
            android:textSize="10dp"
            android:gravity="center"
