<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:id="@+id/card_view_times"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#f2f2f2"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_image_times"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/quadra2"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_image_jogador_1_1"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/item_texte_jogador_1_1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_image_jogador_1_1"
            android:layout_below="@+id/item_image_jogador_1_1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="10dp"
            android:lines="2"
            android:maxLines="2"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_image_jogador_1_2"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/item_texte_jogador_1_2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_image_jogador_1_2"
            android:layout_below="@+id/item_image_jogador_1_2"
            android:textSize="10dp"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_image_jogador_1_3"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/item_texte_jogador_1_3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_image_jogador_1_3"
            android:layout_below="@+id/item_image_jogador_1_3"
            android:textSize="10dp"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_image_jogador_1_4"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/item_texte_jogador_1_4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_image_jogador_1_4"
            android:layout_below="@+id/item_image_jogador_1_4"
            android:textSize="10dp"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_image_jogador_2_1"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/item_texte_jogador_2_1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_image_jogador_2_1"
            android:layout_below="@+id/item_image_jogador_2_1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="10dp"
            android:lines="2"
            android:maxLines="2"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_image_jogador_2_2"
